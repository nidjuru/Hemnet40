@model IEnumerable<Hemnet41.Models.Objekt>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/IndexFinal.css">
    <title>Document</title>
</head>
<body>
    <div class="main">
        <img src="~/images/Hemnet40.png" />
        <ul class="cards">

            @foreach (var item in Model)
            {   
                <li class="cards_item">
                    <a a asp-action="Details" asp-route-id="@item.HouseId" >
                        <div class="card">
                            <div class="card_image"> <img src="@Html.DisplayFor(modelItem => item.Images)"></div>
                            <div class="card_content">
                                <h2 class="card_title">@Html.DisplayFor(modelItem => item.Adress)</h2>
                                <p class="card_text">@Html.DisplayFor(modelItem => item.Price) SEK</p>
                                <p class="card_text">Area: @Html.DisplayFor(modelItem => item.LivingArea) m²</p>
                                <p class="card_text">Rooms: @Html.DisplayFor(modelItem => item.Rooms)</p>
                            </div>
                        </div>
                    </a>
               </li>
            }
        </ul>
    </div>
</body>
</html>
