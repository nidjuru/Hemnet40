@model Hemnet41.Models.Objekt

@{
    ViewData["Title"] = "Details";
}
<head>
    <link rel="stylesheet" href="~/css/IndexFinal.css">
</head>

<h1>Details</h1>

<div>
    <h4>Objekt</h4>
    <hr />
    <div class="img-container">
        <img class="col-sm-10"
             src="@Html.DisplayFor(model => model.Images)" />
    </div>
    <dl class="row">
        <dt class="col-sm-2">
            Address:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Adress)
        </dd>
        <dt class="col-sm-2">
            Utgångspris:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price) SEK
        </dd>
        <dt class="col-sm-2">
            Bostadstyp:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HousingType)
        </dd>
        <dt class="col-sm-2">
            Upplåtelseform:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FormOfLease)
        </dd>
        <dt class="col-sm-2">
            Antal rum:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rooms) Rum
        </dd>
        <dt class="col-sm-2">
            Boarea:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LivingArea) m²
        </dd>
        <dt class="col-sm-2">
            Biarea:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BiArea) m²
        </dd>
        <dt class="col-sm-2">
            Tomtarea:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PlotArea) m²
        </dd>
        <dt class="col-sm-2">
            Byggår:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BuildYear)
        </dd>
        <dt class="col-sm-2">
            Beskrivning:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descriptions)
        </dd>
        <dt class="col-sm-2">
            Visnings datum:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShowingDate)
        </dd>
        <dt class="col-sm-2">
            Mäklare:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Brooker.FirstName)
            <br />
            @Html.DisplayFor(model => model.Brooker.Email)
        </dd>
    </dl>
</div>
<div>
  
    <a asp-action="IndexFinal">Back to List</a>
</div>
